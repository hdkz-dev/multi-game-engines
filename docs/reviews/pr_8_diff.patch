+
+  /**
+   * ã‚¨ãƒ³ã‚¸ãƒ³ã‚’ãƒ­ãƒ¼ãƒ‰ã—ã€æº–å‚™å®Œäº†çŠ¶æ…‹ã«ã—ã¾ã™ã€‚
+   */
+  async load(loader?: IEngineLoader): Promise<void> {
+    if (this._status === "ready") return;
+
+    const startTime = Date.now();
+    this.emitStatusChange("loading");
+    this.activeLoader = loader || null;
+
+    try {
+      let workerUrl = this.sources.main.url;
+
+      // ãƒ–ãƒªãƒƒã‚¸ã‹ã‚‰ãƒ­ãƒ¼ãƒ€ãƒ¼ãŒæä¾›ã•ã‚Œã¦ã„ã‚‹å ´åˆã¯ã€SRIæ¤œè¨¼ã¨ã‚­ãƒ£ãƒƒã‚·ãƒ¥ã‚’åˆ©ç”¨ã™ã‚‹
+      if (loader) {
+        this.emitProgress({ 
+          phase: "downloading", 
+          percentage: 10, 
+          i18n: { key: "loading_resource", defaultMessage: "Loading engine resource..." } 
+        });
