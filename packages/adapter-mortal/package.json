{
  "name": "@multi-game-engines/adapter-mortal",
  "version": "0.1.0",
  "description": "Mortal (Mahjong) engine adapter for multi-game-engines ecosystem",
  "type": "module",
  "license": "MIT",
  "author": "hdkz-dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hdkz-dev/multi-game-engines.git",
    "directory": "packages/adapter-mortal"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "mahjong",
    "mortal",
    "engine",
    "wasm",
    "multi-game-engines"
  ],
  "dependencies": {
    "@multi-game-engines/domain-mahjong": "workspace:*"
  },
  "peerDependencies": {
    "@multi-game-engines/core": "^0.1.0"
  },
  "devDependencies": {
    "@multi-game-engines/core": "workspace:*",
    "eslint": "^9.39.3",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "lint": "eslint ."
  },
  "engines": {
    "node": "^20 || ^22 || >=24"
  },
  "bugs": {
    "url": "https://github.com/hdkz-dev/multi-game-engines/issues"
  },
  "homepage": "https://github.com/hdkz-dev/multi-game-engines#readme"
}
