{
  "name": "@multi-game-engines/domain-gomoku",
  "version": "0.1.0",
  "description": "Gomoku domain types and validation for multi-game-engines ecosystem",
  "type": "module",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --external @multi-game-engines/* --format esm && tsc --emitDeclarationOnly --composite false --declaration --outDir dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint ."
  },
  "dependencies": {
    "@multi-game-engines/core": "workspace:*",
    "@multi-game-engines/i18n-common": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.13.0",
    "tsup": "^8.3.6",
    "typescript": "5.7.3",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": "^20 || ^22 || >=24"
  }
}
