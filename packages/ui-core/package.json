{
  "name": "@multi-game-engines/ui-core",
  "version": "0.1.0",
  "description": "Framework-agnostic UI logic for game engines",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./theme.css": "./src/theme.css"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --tsconfig tsconfig.build.json",
    "dev": "tsup src/index.ts --format cjs,esm --watch --dts",
    "lint": "eslint .",
    "test": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "license": "MIT",
  "sideEffects": [
    "*.css"
  ],
  "dependencies": {
    "@multi-game-engines/core": "workspace:*",
    "@multi-game-engines/i18n": "workspace:*",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "ajv": "^8.18.0",
    "tsup": "^8.3.5",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
