{
  "name": "@multi-game-engines/ui-react",
  "version": "0.1.0",
  "description": "React components for multi-game engines (Hub Package)",
  "type": "module",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./hooks": {
      "types": "./dist/hooks.d.ts",
      "import": "./dist/hooks.js",
      "require": "./dist/hooks.cjs"
    },
    "./dist/index.css": "./dist/index.css",
    "./index.css": "./dist/index.css"
  },
  "sideEffects": [
    "*.css"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/hooks.ts --format cjs,esm --dts && pnpm exec tailwindcss -i src/styles/tailwind.css -o dist/index.css",
    "dev": "tsup src/index.ts --format cjs,esm --watch --dts",
    "lint": "eslint .",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "license": "MIT",
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "@multi-game-engines/core": "workspace:*",
    "@multi-game-engines/i18n": "workspace:*",
    "@multi-game-engines/ui-chess-react": "workspace:*",
    "@multi-game-engines/ui-core": "workspace:*",
    "@multi-game-engines/ui-elements": "workspace:*",
    "@multi-game-engines/ui-react-core": "workspace:*",
    "@multi-game-engines/ui-react-monitor": "workspace:*",
    "@multi-game-engines/ui-shogi-react": "workspace:*"
  },
  "devDependencies": {
    "@multi-game-engines/domain-chess": "workspace:*",
    "@multi-game-engines/domain-shogi": "workspace:*",
    "@storybook/react": "10.2.10",
    "@storybook/react-vite": "10.2.10",
    "@tailwindcss/cli": "^4.2.0",
    "@tailwindcss/vite": "^4.2.0",
    "@types/node": "^25.3.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "eslint-plugin-react-hooks": "7.0.0",
    "jsdom": "^28.1.0",
    "tailwindcss": "^4.2.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "author": "hdkz-dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hdkz-dev/multi-game-engines.git",
    "directory": "packages/ui-react"
  },
  "bugs": {
    "url": "https://github.com/hdkz-dev/multi-game-engines/issues"
  },
  "homepage": "https://github.com/hdkz-dev/multi-game-engines#readme"
}
