{
  "name": "@multi-game-engines/registry",
  "version": "0.1.0",
  "description": "Centralized engine metadata registry for multi-game-engines",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "data"
  ],
  "scripts": {
    "build": "tsup src/index.ts --external @multi-game-engines/* --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --external @multi-game-engines/* --format cjs,esm --dts --watch",
    "test": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@multi-game-engines/core": "workspace:*",
    "stockfish": "16.0.0",
    "tsup": "^8.5.1",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "@multi-game-engines/core": "workspace:*"
  },
  "dependencies": {
    "@multi-game-engines/i18n": "workspace:*",
    "zod": "^4.3.6"
  }
}
