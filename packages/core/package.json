{
  "name": "@multi-game-engines/core",
  "version": "0.1.0",
  "description": "Core interfaces and bridge for multi-game-engines",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm && tsc --emitDeclarationOnly",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "lint": "eslint src"
  },
  "keywords": [
    "boardgames",
    "chess",
    "shogi",
    "engine",
    "bridge",
    "wasm"
  ],
  "author": "multi-game-engines contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hdkz-dev/multi-game-engines.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/hdkz-dev/multi-game-engines/issues"
  },
  "homepage": "https://github.com/hdkz-dev/multi-game-engines#readme",
  "devDependencies": {
    "eslint": "^10.0.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
