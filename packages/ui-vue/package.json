{
  "name": "@multi-game-engines/ui-vue",
  "version": "0.1.0",
  "description": "Vue 3 components for multi-game engines (Hub Package)",
  "type": "module",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./hooks": {
      "types": "./dist/hooks.d.ts",
      "import": "./dist/hooks.js",
      "require": "./dist/hooks.cjs"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --external @multi-game-engines/* src/hooks.ts --format cjs,esm --dts --sourcemap",
    "dev": "tsup src/index.ts --external @multi-game-engines/* --format cjs,esm --watch --dts",
    "lint": "eslint .",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "storybook": "storybook dev -p 6007",
    "build-storybook": "storybook build"
  },
  "license": "MIT",
  "sideEffects": [
    "*.css",
    "*.vue"
  ],
  "peerDependencies": {
    "vue": ">=3.3.0"
  },
  "dependencies": {
    "@multi-game-engines/core": "workspace:*",
    "@multi-game-engines/i18n-common": "workspace:*",
    "@multi-game-engines/ui-chess-vue": "workspace:*",
    "@multi-game-engines/ui-core": "workspace:*",
    "@multi-game-engines/ui-elements": "workspace:*",
    "@multi-game-engines/ui-shogi-vue": "workspace:*",
    "@multi-game-engines/ui-vue-core": "workspace:*",
    "@multi-game-engines/ui-vue-monitor": "workspace:*"
  },
  "devDependencies": {
    "@multi-game-engines/domain-chess": "workspace:*",
    "@multi-game-engines/domain-shogi": "workspace:*",
    "@storybook/vue3": "10.2.10",
    "@storybook/vue3-vite": "10.2.10",
    "@tailwindcss/vite": "^4.2.0",
    "@types/node": "^22.0.0",
    "@vitejs/plugin-vue": "^6.0.4",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.18"
  },
  "author": "hdkz-dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hdkz-dev/multi-game-engines.git",
    "directory": "packages/ui-vue"
  },
  "bugs": {
    "url": "https://github.com/hdkz-dev/multi-game-engines/issues"
  },
  "homepage": "https://github.com/hdkz-dev/multi-game-engines#readme"
}
