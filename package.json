{
  "name": "multi-game-engines",
  "private": true,
  "type": "module",
  "description": "A bridge library for various game engines with a plugin-based architecture.",
  "workspaces": [
    "packages/*",
    "examples/*",
    "infrastructure/cdn/cloudflare"
  ],
  "packageManager": "pnpm@10.28.2",
  "scripts": {
    "test": "pnpm -r --if-present test",
    "test:e2e": "turbo test:e2e",
    "lint": "turbo lint",
    "lint:fix": "turbo lint -- --fix",
    "typecheck": "turbo typecheck",
    "build": "turbo build",
    "clean": "find . -type d \\( -name \"dist\" -o -name \".next\" -o -name \".output\" -o -name \".nuxt\" -o -name \"storybook-static\" \\) -not -path \"*/node_modules/*\" -exec rm -rf {} +",
    "clean:deps": "rm -rf node_modules **/node_modules pnpm-lock.yaml",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "mcp:mask": "node scripts/sync-mcp-tokens.js mask",
    "mcp:fill": "node scripts/sync-mcp-tokens.js fill",
    "doc-sync": "node scripts/doc-sync.js",
    "prepare": "husky",
    "release": "pnpm build && changeset publish",
    "ai:check": "pnpm lint && pnpm typecheck && pnpm build && pnpm test && pnpm test:e2e",
    "ai:release": "changeset"
  },
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=10.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "@swc/core",
      "esbuild",
      "sharp",
      "unrs-resolver",
      "workerd"
    ],
    "overrides": {
      "@rushstack/ts-command-line": "5.2.0",
      "@microsoft/api-extractor": "7.56.3"
    }
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^10.0.1",
    "eslint": "^10.0.1",
    "eslint-plugin-storybook": "^10.2.10",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "turbo": "^2.8.10",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix --no-warn-ignored"
    ],
    "*.{json,md,html}": [
      "prettier --write"
    ]
  }
}
