{
  "name": "multi-game-engines",
  "private": true,
  "description": "A bridge library for various game engines with a plugin-based architecture.",
  "workspaces": [
    "packages/*",
    "infrastructure/cdn/cloudflare"
  ],
  "packageManager": "pnpm@10.28.2",
  "scripts": {
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "build": "pnpm -r build",
    "clean": "find . -name \"dist\" -type d -not -path \"*/node_modules/*\" -exec rm -rf {} +",
    "clean:deps": "rm -rf node_modules **/node_modules pnpm-lock.yaml",
    "format": "prettier --write ."
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp",
      "workerd"
    ]
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "prettier": "^3.8.1",
    "eslint": "^10.0.0",
    "typescript-eslint": "^8.54.0",
    "@eslint/js": "^10.0.0"
  }
}