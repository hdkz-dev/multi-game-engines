{
  "name": "multi-game-engines",
  "private": true,
  "description": "A bridge library for various game engines with a plugin-based architecture.",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "npm run test -w packages/*",
    "lint": "npm run lint -w packages/*",
    "typecheck": "npm run typecheck -w packages/*",
    "build": "npm run build -w packages/*",
    "clean": "find . -name \"dist\" -type d -exec rm -rf {} +",
    "format": "prettier --write \"**/*.{ts,js,json,md}\""
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "devDependencies": {
    "typescript": "^5.7.0",
    "prettier": "^3.0.0"
  }
}