{
  "name": "multi-game-engines",
  "private": true,
  "description": "A bridge library for various game engines with a plugin-based architecture.",
  "workspaces": [
    "packages/*",
    "infrastructure/cdn/cloudflare"
  ],
  "scripts": {
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "typecheck": "npm run typecheck --workspaces",
    "build": "npm run build -w packages/*",
    "clean": "find . -name \"dist\" -type d -not -path \"*/node_modules/*\" -exec rm -rf {} +",
    "clean:deps": "rm -rf node_modules packages/*/node_modules infrastructure/cdn/cloudflare/node_modules",
    "format": "prettier --write ."
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "prettier": "^3.8.1"
  }
}