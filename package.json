{
  "name": "multi-game-engines",
  "private": true,
  "description": "A bridge library for various game engines with a plugin-based architecture.",
  "workspaces": [
    "packages/*",
    "infrastructure/cdn/cloudflare"
  ],
  "packageManager": "pnpm@10.28.2",
  "scripts": {
    "test": "pnpm -r --if-present test",
    "lint": "pnpm -r --if-present lint",
    "typecheck": "pnpm -r --if-present typecheck",
    "build": "pnpm -r --if-present build",
    "clean": "find . -name \"dist\" -type d -not -path \"*/node_modules/*\" -exec rm -rf {} +",
    "clean:deps": "rm -rf node_modules **/node_modules pnpm-lock.yaml",
    "format": "prettier --write .",
    "mcp:mask": "node scripts/sync-mcp-tokens.js mask",
    "mcp:fill": "node scripts/sync-mcp-tokens.js fill",
    "prepare": "husky",
    "release": "pnpm build && changeset publish"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp",
      "workerd"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^10.0.0",
    "eslint": "^10.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,html}": [
      "prettier --write"
    ]
  }
}
